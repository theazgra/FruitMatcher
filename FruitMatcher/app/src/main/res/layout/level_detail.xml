<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/levelDetailTopLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/levelDetail"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbLevelTimeLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbLevelTileLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cíl úrovně"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgApple"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/apple" />

            <TextView
                android:id="@+id/lbApple"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1.01"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imgBanana"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/banana" />

            <TextView
                android:id="@+id/lbBanana"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBlueberry"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/blueberry" />

            <TextView
                android:id="@+id/lbBlueberry"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imgLemon"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/lemon" />

            <TextView
                android:id="@+id/lbLemon"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgOrange"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/orange" />

            <TextView
                android:id="@+id/lbOrange"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imgStrawberry"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/strawberry" />

            <TextView
                android:id="@+id/lbStrawberry"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>