<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vojtch.fruitmatcher">

    <application
        android:name=".FruitMatcherApp"
        android:allowBackup="true"
        android:icon="@drawable/banana"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameEngine.CanvasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LevelSelect"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayerSelect"
            android:label="@string/title_activity_players"
            android:screenOrientation="portrait" />
        <activity android:name=".AddPlayer" />
        <activity android:name=".Highscore"></activity>
    </application>

</manifest>